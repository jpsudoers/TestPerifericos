<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="bar_header_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75.50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24.00sp</item>
    </style>
    <style name="bar_header_container_back">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:layout_marginLeft">26.00dp</item>
        <item name="android:paddingLeft">10.00dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="bar_header_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="bar_header_back_icon">
        <item name="android:layout_width">16.00dp</item>
        <item name="android:layout_height">23.00dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="card_item_menu">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">135.50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_marginLeft">2.50dp</item>
        <item name="android:layout_marginRight">2.50dp</item>
        <item name="android:layout_marginTop">2.50dp</item>
        <item name="android:layout_marginBottom">2.50dp</item>
    </style>

    <style name="card_item_menu_num">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">25.00sp</item>
        <item name="android:textColor">#4871B3</item>
    </style>


    <style name="card_item_menu_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <!--<item name="android:textSize">21.00sp</item>-->
        <item name="android:textColor">#4871B3</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

</resources>